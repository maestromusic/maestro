import sys, subprocess

returncode = subprocess.call([sys.executable, '-m', 'omg.application'] + sys.argv[1:])
if returncode == 117:
    returncode = subprocess.call([sys.executable, '-m', 'omg.install'])
    if returncode == 117:
        returncode = subprocess.call([sys.executable, '-m', 'omg.application'] + sys.argv[1:])